<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.babycar.android.ControlActivty">

    <Button
            android:text="Tab"
            android:layout_width="wrap_content"
            android:id="@+id/Button_model"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_height="0dp"
            android:layout_marginBottom="264dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="504dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/Button_stop" android:background="@drawable/stop"
            app:layout_constraintTop_toBottomOf="@+id/Button_up" app:layout_constraintStart_toEndOf="@+id/Button_left"
            app:layout_constraintBottom_toTopOf="@+id/Button_down" app:layout_constraintEnd_toStartOf="@+id/Button_right"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/Button_down" android:background="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="62dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="63dp"
            app:layout_constraintTop_toBottomOf="@+id/Button_stop" android:layout_marginEnd="489dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_height="0dp"
            android:id="@+id/Button_left" android:background="@drawable/left"
            android:layout_width="0dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="103dp" app:layout_constraintEnd_toStartOf="@+id/Button_stop"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="167dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/Button_right" android:background="@drawable/right"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="167dp"
            app:layout_constraintStart_toEndOf="@+id/Button_stop" android:layout_marginEnd="449dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="103dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/Button_up" android:background="@drawable/run" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="126dp" app:layout_constraintBottom_toTopOf="@+id/Button_stop"
            android:layout_marginEnd="489dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"/>
    <SurfaceView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/C_sufaceview"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="138dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Button_right"/>

</android.support.constraint.ConstraintLayout>
